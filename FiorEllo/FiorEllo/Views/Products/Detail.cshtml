@model Product
<div style="text-align:center">
    <img src="~/img/@Model.Image" style="width:200px; height:200px; object-fit:cover" />
    <h2 style="margin-top:10px">@Model.Name</h2>
    <div>@Model.ProductDetail.Description</div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Go Back</a>
</div>
